{
  "compilerOptions": {
    "target": "es2021", // Atualize para um target moderno que o Node.js 16+ suporta bem.
    "module": "nodenext", // Ótimo para o Node.js entender como ES Modules.
    "moduleResolution": "nodenext", // Ótimo para o Node.js resolver módulos ES.
    "esModuleInterop": true, // **CRUCIAL:** Ajuda na interoperabilidade entre CommonJS e ES Modules.
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true, // Complementa esModuleInterop
    "experimentalDecorators": true, // Se estiver usando decorators do TypeScript
    "emitDecoratorMetadata": true // Se estiver usando reflect-metadata com decorators
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "jest.config.ts"], // Certifique-se de incluir seus arquivos de teste
  "exclude": ["node_modules", "dist"]
}
